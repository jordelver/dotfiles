[user]
  name = Jordan Elver
  email = jordan.elver@gmail.com
[color]
  branch=auto
  diff=auto
  status=auto
[core]
  excludesfile = "~/.gitignore"
  editor = /usr/local/bin/nvim
[alias]
  st = status
  s = status
  co = checkout
  ci = commit
  br = branch -a
  a = add
  wip = commit -m "WIP"
  ff = merge --ff-only
  noff = merge --no-ff
  staged = diff --staged
  l = log --pretty=format:"%C(yellow)%h%C(cyan)%x09%an%Creset%x09%C(magenta)%ar%x09%Creset%s" -20
  ll = log --pretty=format:"%C(yellow)%h%C(cyan)%x09%an%Creset%x09%C(magenta)%ar%x09%Creset%s"
  last = log -1 HEAD
  d = diff
  timeline=log --oneline --graph --all
[branch]
  autosetuprebase = always
[commit]
  template = "~/.git-commit-template"
[push]
  default = simple
